noUnderline()
	text-decoration none
defaultPadding()
	padding 5px
navPadding()
	padding 0 7px
navh()
	height 50px
lefty()
	float left
righty()
	float right
rmBullet()
	list-style none
marginLess()
	margin 0
paddingLess()
	padding 0
sidePadding(size)
	padding 0 size
inline()
	display inline
fullLine()
	display block
ovehid()
	overflow hidden
rPadding(size)
	padding-right size
lPadding(size)
	padding-left size
getParentH()
	display inline-block
	line-height 50px
font()
	font-family "Helvetica Neue",Helvetica,Arial,sans-serif


header
	bg(#222)
	

.brand 
	lefty()
	font()

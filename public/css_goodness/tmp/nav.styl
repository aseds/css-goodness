.brand a
	lPadding(xmaller)
	noUnderline()
	color #337ab7
	font()
	
.brand a:hover
	color white

header h1.brand, nav h2.brand, nav h3.brand, nav h4.brand, nav h5.brand, nav h6.brand
	marginLess()
